{
  "compilerOptions": {
    "target": "es5",
    "types": ["jest", "@testing-library/jest-dom"],
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    ".storybook",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ],
  "exclude": ["node_modules"]
}